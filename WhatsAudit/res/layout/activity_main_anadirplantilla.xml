<?xml version="1.0" encoding="utf-8"?>

    
	<RelativeLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	    
	    <Button
	        android:id="@+id/butAnadirPlantilla"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="23dp"
	        android:text="AÃ±adir" />
	
	    <TextView
	        android:id="@+id/tetxView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textPregunta1"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="27dp"
	        android:text="Titulo: " />
	
	    <EditText
	        android:id="@+id/tituloPlantilla"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/tetxView1"
	        android:layout_alignBottom="@+id/tetxView1"
	        android:layout_toRightOf="@+id/textPregunta3"
	        android:ems="10" />
	
	    <TextView
	        android:id="@+id/textPregunta1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textPregunta2"
	        android:layout_below="@+id/tituloPlantilla"
	        android:layout_marginTop="39dp"
	        android:text="Pregunta 1: " />
	
	    <EditText
	        android:id="@+id/AnadPregunta1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/AnadPregunta2"
	        android:layout_below="@+id/textPregunta1"
	        android:layout_marginTop="14dp"
	        android:ems="10" />
	
	    <TextView
	        android:id="@+id/textPregunta2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/AnadPregunta1"
	        android:layout_marginLeft="19dp"
	        android:layout_marginTop="45dp"
	        android:text="Pregunta 2" />
	
	    <TextView
	        android:id="@+id/textPregunta3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textPregunta2"
	        android:layout_below="@+id/AnadPregunta2"
	        android:layout_marginTop="45dp"
	        android:text="Pregunta 3" />
	
	    <EditText
	        android:id="@+id/AnadPregunta3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/AnadPregunta2"
	        android:layout_below="@+id/textPregunta3"
	        android:layout_marginTop="30dp"
	        android:ems="10" />
	
	    <EditText
	        android:id="@+id/AnadPregunta2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textPregunta2"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="17dp"
	        android:ems="10" />
	
	</RelativeLayout>